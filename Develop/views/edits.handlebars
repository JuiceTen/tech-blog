<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit your blog:</h3>

    <form data-id="{{id}}"  class="form edit-blog-form">
      
      <div class="form-group">
        <label for="blog-title">blog name:</label>
        <input  data-id="{{id}}" class="form-input" type="text" id="blog-title" name="blog-title" placeholder="{{title}}" />
      </div>
      <div class="form-group">
        <label for="blog-content">content:</label>
        <textarea data-id="{{id}}" class="form-input" id="blog-content" name="blog-content">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}">Update</button>
      </div>
      <button id="delete" data-id='{{id}}'>DELETE</button>
    </form>
  </div>

<script src = '/js/edits.js'></script>